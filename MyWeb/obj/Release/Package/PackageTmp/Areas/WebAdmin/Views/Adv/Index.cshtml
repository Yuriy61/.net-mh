@{
    Layout = "~/Areas/WebAdmin/Views/Shared/_LayoutMetronic.cshtml";
}

 <!-- BEGIN PAGE HEADER-->
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="#">Website Adv</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>Add</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<h3 class="page-title">
    Add
    <small></small>
</h3>

<div class="row" id="list-content">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-datatable bordered">
            <div class="portlet-body">
                <form enctype="multipart/form-data" action="/WebAdmin/Adv/Index" method="post" class="form-horizontal">
                    <div class="form-body">

                        @if (ViewBag.Error != "none")
                        {
                            <div class="alert alert-block alert-danger fade in">
                                <button type="button" class="close" data-dismiss="alert"></button>
                                <p>@ViewBag.Error</p>
                            </div>
                        }
                        @if (ViewBag.Success == "ok")
                        {
                            <div class="alert alert-block alert-success fade in">
                                <button type="button" class="close" data-dismiss="alert"></button>
                                <p>Success</p>
                            </div>
                        }
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Adv Type
                            </label>
                            <div class="col-md-6">
                                <select name="advType" class="form-control">
                                    @{
                                        foreach (var item in AMW.Model.Enum.AdvTypeHelper.GetList())
                                        {
                                            <option value="@((int)item)">@item.GetDescriptionByName()</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Title
                            </label>
                            <div class="col-md-6">
                                <input type="text" name="title" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                SubHead
                            </label>
                            <div class="col-md-6">
                                <input type="text" name="subhead" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group" style="display:none;">
                            <label class="control-label col-md-2">
                                Link
                            </label>
                            <div class="col-md-6">
                                <input type="url" name="link" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Pic
                                <span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-6">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                                        <img src="" />
                                    </div>
                                    <div>
                                        <span class="btn red btn-outline btn-file">
                                            <span class="fileinput-new"> Select image </span>
                                            <span class="fileinput-exists"> Change </span>
                                            <input type="file" name="img" accept="image/gif,image/jpeg,image/png">
                                        </span>
                                        <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Is Show</label>
                            <div class="col-md-6">
                                <select name="isshow" class="bs-select form-control">
                                    <option value="1">Show</option>
                                    <option value="0">Hide</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Priority</label>
                            <div class="col-md-6">
                                <input type="number" name="priority" placeholder="" required class="form-control" value="1">
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- End: life time stats -->
    </div>
</div>