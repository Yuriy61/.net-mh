<script type="text/javascript">
    function submitData() {
        $('#content').val($('#content_div').code());
        return true;
    }
    $('#content_div').summernote({
        height: 300,
        onImageUpload: function (files) {
            var formData = new FormData();
            formData.append("file", files[0]);
            $.ajax({
                data: formData,
                type: "POST",
                url: "/Image/Upload",
                cache: false,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.ok) {
                        $('#content_div').summernote('insertImage', data.url, 'img')
                    } else {
                        alert(data.error);
                    }
                },
                error: function () {
                    alert("Error！");
                }
            })
        }
    });
    function category1Change() {
        $("#category2").html("");
        $.post("/ProductCategory/Query", { id: $("#category1").val() }).done(function (d) {
            if (!!d.data && d.data.length > 0) {
                d.data.forEach(function(item){
                    $("#category2").append($("<option value='" + item.ID + "'>"+item.Name+"</option>"));
                })
            }
        });
    }
    $(function () {
        category1Change();
    });
</script>