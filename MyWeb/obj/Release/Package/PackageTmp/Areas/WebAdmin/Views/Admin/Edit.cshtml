@model AMW.Model.Entity.MldAdmin
@{
    Layout = "~/Areas/WebAdmin/Views/Shared/_LayoutMetronic.cshtml";
}

 <!-- BEGIN PAGE HEADER-->
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="#">Admin Setting</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>Edit</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<h3 class="page-title">
    Edit
    <small></small>
</h3>

<div class="row" id="list-content">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-datatable bordered">
            <div class="portlet-body">
                <form action="/WebAdmin/Admin/Edit" method="post" class="form-horizontal">
                    <div class="form-body">

                        @if (ViewBag.Error != "none")
                        {
                            <div class="alert alert-block alert-danger fade in">
                                <button type="button" class="close" data-dismiss="alert"></button>
                                <p>@ViewBag.Error</p>
                            </div>
                        }
                        @if (ViewBag.Success == "ok")
                        {
                            <div class="alert alert-block alert-success fade in">
                                <button type="button" class="close" data-dismiss="alert"></button>
                                <p>Success</p>
                            </div>
                        }
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Account
                            </label>
                            <div class="col-md-6">
                                <input required type="text" name="name" class="form-control" value="@Model.Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Pwd
                            </label>
                            <div class="col-md-6">
                                <input type="text" name="pwd" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Lock
                            </label>
                            <div class="col-md-6">
                                <select name="islock" class="bs-select form-control">
                                    <option value="0" @(Model.IsLock == 0 ? "selected" : "")>否</option>
                                    <option value="1" @(Model.IsLock == 1 ? "selected" : "")>是</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="hidden" name="id" value="@Model.ID" />
                                <button type="submit" class="btn green">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- End: life time stats -->
    </div>
</div>