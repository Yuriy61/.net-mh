@{
    Layout = "~/Areas/WebAdmin/Views/Shared/_LayoutMetronic.cshtml";
}

 <!-- BEGIN PAGE HEADER-->
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="#">Website Setting</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <span>Change Password</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<h3 class="page-title">
    Change Password
    <small></small>
</h3>

<div class="row" id="list-content">
    <div class="col-md-12">
        <div class="portlet light portlet-fit portlet-datatable bordered">
            <div class="portlet-body">
                <form action="/WebAdmin/Home/EditPwd" method="post" class="form-horizontal">
                    <div class="form-body">

                        @if (ViewBag.Error != "none")
                        {
                            <div class="alert alert-block alert-danger fade in">
                                <button type="button" class="close" data-dismiss="alert"></button>
                                <p>@ViewBag.Error</p>
                            </div>
                        }
                        @if (ViewBag.Success == "ok")
                        {
                            <div class="alert alert-block alert-success fade in">
                                <button type="button" class="close" data-dismiss="alert"></button>
                                <p>Success</p>
                            </div>
                        }

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Old Password<span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-6">
                                <input type="password" required name="oldpwd" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                New Password<span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-6">
                                <input type="password" required name="newpwd" class="form-control" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Confirm New Password<span class="required" aria-required="true"> * </span>
                            </label>
                            <div class="col-md-6">
                                <input type="password" required name="anewpwd" class="form-control" value="">
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- End: life time stats -->
    </div>
</div>