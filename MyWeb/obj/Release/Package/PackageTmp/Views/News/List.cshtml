@model List<AMW.Model.Entity.MldNews>
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<link href="/website/banner/css/banner.css" type="text/css" rel="stylesheet" media="all" />
<link href="/website/banner/css/animate.min.css" type="text/css" rel="stylesheet" media="all" />
<script type="text/javascript" src="/website/banner/js/banner.js"></script>
<script type="text/javascript">
    $(function () {
        $("#banner").THBanner();
    });
</script>
<style type="text/css">
    .news_list a {
        display:block;
        width:100%;
        overflow:hidden;
        background-color:#fff;
        height:190px;
        padding:20px;
        padding-right:60px;
        text-decoration:none;
        margin-bottom:20px;
    }
    .news_list a img{
        width:225px;
        height:150px;
        float:left;
        margin-right:10px;
    }
</style>
<div id="banner" class="banner" style="overflow:hidden;">
    <div class="banner-item animated" data-classin="fadeIn" data-classout="fadeOut delay10" data-time="400">
        <div class="banner-img" style="background-image:url(/website/img/news_banner.jpg)"></div>
        <div class="banner-text vbox box-h-center box-v-center">
        </div>
    </div>
    <div class="banner-item animated" data-classin="fadeIn" data-classout="fadeOut delay10" data-time="400">
        <div class="banner-img" style="background-image:url(/website/img/banner.jpg)"></div>
        <div class="banner-text vbox box-h-center box-v-center">
        </div>
    </div>
    <div class="banner-tool">
    </div>
</div>

<div class="container">
    <div class="row" style="margin-top:20px;">
        <div class="col-md-12">
            <div style="border-left:3px solid #999999;font-size:16px;color:#333333;padding-left:8px;margin-bottom:30px;">新闻中心</div>

            <div class="news_list">
                @foreach (var item in Model)
                {
                    <a href="/News/Index/@item.ID">
                        <img src="@item.Img" />
                        <p style="font-size:16px;color:#333333;">[@(item.NewsType==1?"公司新闻":"行业新闻")]&nbsp;@item.Title</p>
                        <p style="font-size:12px;color:#666666; height:89px; overflow:hidden;">@item.SubHead</p>
                        <p style="text-align:right;font-size:12px; color:#666;margin-bottom:0;">@item.AddTime.ToString("yyyy-MM-dd HH:mm")</p>
                    </a>
                }
            </div>
        </div>
    </div>
</div>