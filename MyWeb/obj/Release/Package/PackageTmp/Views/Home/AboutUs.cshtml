@model AMW.Model.Entity.MldPage
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<script type="text/javascript">
    $(function () {
        $(".nav_div a").eq(8).addClass("cur");
    });
</script>
<link href="/website/banner/css/banner.css" type="text/css" rel="stylesheet" media="all" />
<link href="/website/banner/css/animate.min.css" type="text/css" rel="stylesheet" media="all" />
<script type="text/javascript" src="/website/banner/js/banner.js"></script>
<script type="text/javascript">
    $(function () {
        $("#banner").THBanner();
    });
</script>
<div id="banner" class="banner" style="overflow:hidden;">
    <div class="banner-item animated" data-classin="fadeIn" data-classout="fadeOut delay10" data-time="400">
        <div class="banner-img" style="background-image:url(/website/img/banner.jpg)"></div>
        <div class="banner-text vbox box-h-center box-v-center">
        </div>
    </div>
    <div class="banner-item animated" data-classin="fadeIn" data-classout="fadeOut delay10" data-time="400">
        <div class="banner-img" style="background-image:url(/website/img/banner.jpg)"></div>
        <div class="banner-text vbox box-h-center box-v-center">
        </div>
    </div>
    <div class="banner-tool">
    </div>
</div>
<style type="text/css">
    .aboutul{
        height:40px;
        background: -webkit-linear-gradient(left, #018997, #41af6d);
        background: -o-linear-gradient(right, #018997, #41af6d);
        background: -moz-linear-gradient(right, #018997, #41af6d);
        background: linear-gradient(to right, #018997, #41af6d);
        display: block;
        float: left;
        width: 100%;
        list-style: none;
        margin: 0;
        padding: 0;
        margin-top:90px;
        margin-bottom:90px;
        border-radius:8px;
    }
    .aboutul li{
        display:block;
        width:12.5%;
        height:40px;
        line-height:40px;
        text-align:center;
        float:left;
    }
    .aboutul li a{
        color:#ffffff;
        font-size:14px;
        text-decoration:none;
        position:relative;
    }
    .aboutul li a:hover,.aboutul li a.cur{
        font-weight:bold;
    }
        .aboutul li a:hover:after, .aboutul li a.cur::after {
            content:' ';
            display:block;
            height:3px;
            width:30px;
            margin:0 auto;
            margin-top:-10px;
            background-color:#fff;
        }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <ul class="aboutul">
                <li><a class="@(Model.ID==1?"cur":"")" href="/Home/AboutUs/1">联系我们</a></li>
                <li><a class="@(Model.ID==2?"cur":"")" href="/Home/AboutUs/2">仓储配送</a></li>
                <li><a class="@(Model.ID==3?"cur":"")" href="/Home/AboutUs/3">皇闽视频</a></li>
                <li><a class="@(Model.ID==4?"cur":"")" href="/Home/AboutUs/4">加工工艺</a></li>
                <li><a class="@(Model.ID==5?"cur":"")" href="/Home/AboutUs/5">企业文化</a></li>
                <li><a class="@(Model.ID==6?"cur":"")" href="/Home/AboutUs/6">荣誉资质</a></li>
                <li><a class="@(Model.ID==7?"cur":"")" href="/Home/AboutUs/7">员工风采</a></li>
                <li><a href="/Home/Comment">在线留言</a></li>
            </ul>
        </div>
    </div>
    <div>
        <div class="row">
            <div class="col-md-12">
                <h3 style="text-align:center;"><label style="border-bottom:3px solid #d5d4da;padding-bottom:5px;">@Model.Title</label></h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" style="margin:20px 0;">
                @Html.Raw(Model.Content)
            </div>
        </div>
        @{
            if (Model.ID == 6)
            {
                <div class="row">
                    <div class="col-md-12" style="margin-bottom:30px;">
                        <link rel="stylesheet" href="/website/js/cooldog/css/Cooldog.css">
                        <link rel="stylesheet" href="/website/js/cooldog/css/iconfont.css">

                        <div class="Cooldog_container" style="margin-bottom:40px;">
                            <div class="Cooldog_content">
                                <ul>
                                    <li class="cur_left2"><a href="#"><img src="/website/img/honor_img1.png" alt=""></a></li>
                                    <li class="cur_left1"><a href="#"><img src="/website/img/honor_img2.png" alt=""></a></li>
                                    <li class="cur"><a href="#"><img src="/website/img/honor_img3.png" alt=""></a></li>
                                    <li class="cur_right1"><a href="#"><img src="/website/img/honor_img4.png" alt=""></a></li>
                                    <li class="cur_right2"><a href="#"><img src="/website/img/honor_img5.png" alt=""></a></li>
                                    <li><a href="#"><img src="/website/img/honor_img6.png" alt=""></a></li>
                                    <li><a href="#"><img src="/website/img/honor_img7.png" alt=""></a></li>
                                    <li><a href="#"><img src="/website/img/honor_img8.png" alt=""></a></li>
                                    <li><a href="#"><img src="/website/img/honor_img9.png" alt=""></a></li>
                                </ul>
                            </div>
                            <a href="javascript:;" class="btn_left" style="text-decoration: none;">
                                <i class="iconfont icon-zuoyoujiantou"></i>
                            </a>
                            <a href="javascript:;" class="btn_right" style="text-decoration: none;">
                                <i class="iconfont icon-zuoyoujiantou-copy-copy"></i>
                            </a>
                        </div>
                        <script type="text/javascript" src="/website/js/cooldog/js/Cooldog.js"></script>
                    </div>
                </div>
            }
        }
        
    </div>
</div>